g_form.addOption('opcoes_de_chamados_da_esteira_escolhida', 'Dúvidas sobre cadastro', 'Dúvidas sobre cadastro');
g_form.addOption('opcoes_de_chamados_da_esteira_escolhida', 'Dúvida sobre a Mesa de Operações', 'Dúvida sobre a Mesa de Operações');
g_form.addOption('opcoes_de_chamados_da_esteira_escolhida', 'Dúvida sobre Transacional Agrícola', 'Dúvida sobre Transacional Agrícola');
