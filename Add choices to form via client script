g_form.addOption('opcoes_de_chamados_da_esteira_escolhida', 'Dúvidas sobre Folha de Pagamentos', 'Dúvidas sobre Folha de Pagamentos');
g_form.addOption('opcoes_de_chamados_da_esteira_escolhida', 'Dúvidas/ Problemas sobre Benefícios', 'Dúvidas/ Problemas sobre Benefícios');
g_form.addOption('opcoes_de_chamados_da_esteira_escolhida', 'Dúvidas/ Problemas sobre Movimentações', 'Dúvidas/ Problemas sobre Movimentações');
g_form.addOption('opcoes_de_chamados_da_esteira_escolhida', 'Dúvidas/ Problemas sobre pensão alimentícia', 'Dúvidas/ Problemas sobre pensão alimentícia');

